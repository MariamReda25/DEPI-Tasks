{
  "name": "task-1",
  "version": "1.0.0",
  "description": "Landing page",
  "scripts": {
    "watch:sass": "sass src/sass/main.scss src/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass src/sass/main.scss src/css/style.comp.css",
    "prefix:css": "postcss src/css/style.comp.css --use-autoprefixer -b 'last 10 versions' -o src/css/style.prefix.css",
    "compress:css": "sass src/css/style.prefix.css  src/css/style.css --style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Mariam Reda",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "sass": "^1.94.2"
  }
}
